<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/detailDentistNameTXTview"
        android:id="@+id/detailDentistNameTXTview"
        android:textColor="@color/Text.Color"
        android:textSize="24sp"
        android:gravity="left|start"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/GoogleMapsImageView"
        android:layout_toStartOf="@+id/GoogleMapsImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/streetAddressTXTview"
        android:id="@+id/streetAddressTXTview"
        android:textSize="22sp"
        android:layout_below="@+id/detailDentistNameTXTview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/GoogleMapsImageView"
        android:layout_toStartOf="@+id/GoogleMapsImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/ZIPcityTXTview"
        android:id="@+id/ZIPcityTXTview"
        android:textSize="22sp"
        android:layout_below="@+id/streetAddressTXTview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/GoogleMapsImageView"
        android:layout_toStartOf="@+id/GoogleMapsImageView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GoogleMapsImageView"
        android:src="@mipmap/ic_launch_maps"
        android:contentDescription="@string/GoogleMapsImageView"
        android:background="@drawable/button_selector"
        android:layout_alignTop="@+id/detailDentistNameTXTview"
        android:layout_alignLeft="@+id/phoneImageView"
        android:layout_alignStart="@+id/phoneImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/phoneTXTview"
        android:id="@+id/phoneTXTview"
        android:layout_gravity="center_vertical"
        android:textSize="22sp"
        android:layout_below="@+id/ZIPcityTXTview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneImageView"
        android:src="@mipmap/ic_launch_phone"
        android:contentDescription="@string/phoneImageView"
        android:background="@drawable/button_selector"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/linkTXTview"
        android:textSize="16sp"
        android:id="@+id/linkTXTview"
        android:layout_alignTop="@+id/browserImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/browserImageView"
        android:src="@mipmap/ic_launch_browser"
        android:contentDescription="@string/browserImageView"
        android:background="@drawable/button_selector"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
